[Unit]
Description=Etcd
After=network.target

[Service]
Type=simple
User=ansible
Group=ansible
WorkingDirectory=/home/ansible
ExecStart=/usr/bin/etcd \
  --name {{ ansible_hostname }} \
  --initial-advertise-peer-urls http://{{ hostvars[ansible_hostname]['address'] }}:2380 \
  --listen-peer-urls http://{{ hostvars[ansible_hostname]['address'] }}:2380 \
  --listen-client-urls http://{{ hostvars[ansible_hostname]['address'] }}:2379,http://127.0.0.1:2379 \
  --advertise-client-urls http://{{ hostvars[ansible_hostname]['address'] }}:2379 \
  --initial-cluster-token {{ etcd.token }} \
  --initial-cluster {{ etcd.cluster }} \
  --initial-cluster-state {{ etcd.state }}
Restart=always

[Install]
WantedBy=multi-user.target