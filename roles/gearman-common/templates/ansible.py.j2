#!/usr/bin/python3

import sys
import gear
import socket

client = gear.Client()
for server in {{ groups['gearman-server'] | shuffle(seed=ansible_hostname) }}:
    client.addServer(f"{server}", 4730)

try:
    client.waitForServer(60)
    job = gear.Job("ansible", bytes(f"source={socket.gethostname()}", 'utf-8'))
    client.submitJob(job)
except TimeoutError:
    sys.exit(1)
else:
    sys.exit(0)
